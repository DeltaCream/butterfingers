{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Attendance Manager",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": false,
        "open": false,
        "save": false
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Attendance Manager",
        "width": 800,
        "height": 600,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "deb",
      "identifier": "com.codedaddies.butterfingers",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "deb": {
        "depends": [
          "libfprint-2-2",
          "libcairo-gobject2"
        ],
        "desktopTemplate": "./main.desktop"
      }
    }
  }
}
